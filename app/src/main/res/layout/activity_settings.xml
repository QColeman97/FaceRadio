<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">

    <TextView
            android:text="What do you listen to when you are...."
            android:layout_width="365dp"
            android:layout_height="43dp"
            android:id="@+id/prompt" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="20sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <Button
            android:text="Continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/continue_button_settings"
            tools:layout_editor_absoluteY="422dp" tools:layout_editor_absoluteX="146dp"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"/>
    <Button
            android:text="Happy?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="147dp" android:id="@+id/happy_button_settings"
            tools:layout_editor_absoluteY="179dp" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:layout_marginTop="72dp"/>
    <Button
            android:text="Passive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/passive_button_settings"
            tools:layout_editor_absoluteY="235dp" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="269dp"/>
    <Button
            android:text="Sleepy?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sleepy_button_settings"
            tools:layout_editor_absoluteX="147dp" tools:layout_editor_absoluteY="297dp"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="158dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/happy_selection" android:layout_alignParentTop="true" android:layout_marginTop="135dp"
            android:layout_above="@+id/passive_button_settings" android:layout_marginBottom="29dp"
            android:layout_alignStart="@+id/continue_button_settings" android:layout_marginStart="45dp"/>
    <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passive_selection"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp" android:layout_marginTop="46dp"
            android:layout_below="@+id/passive_button_settings" android:text="HHHEERE"/>-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sleepy_selection"
            android:layout_alignParentStart="true"
            android:layout_marginStart="192dp" android:layout_alignParentLeft="true" android:layout_marginLeft="192dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="106dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passive_selection"
            android:layout_above="@+id/sleepy_button_settings" android:layout_marginBottom="16dp"
            android:layout_toStartOf="@+id/happy_selection" android:layout_marginEnd="-45dp"/>
</RelativeLayout>