<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="172dp"
            android:layout_height="181dp"
            app:srcCompat="@drawable/passive_face"
            android:id="@+id/expression_graphic"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="61dp" android:layout_above="@+id/current_track_title"
            android:layout_marginBottom="18dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/current_track_label"
            android:layout_marginBottom="188dp"
            android:textSize="24sp" android:layout_alignStart="@+id/current_artist_label"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/current_artist_label"
            android:layout_marginBottom="74dp" android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_marginBottom="142dp" android:id="@+id/by_title"
            android:layout_alignStart="@+id/current_track_label"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/current_track_title"
            android:layout_marginBottom="233dp" android:layout_alignStart="@+id/current_track_label"/>

</RelativeLayout>