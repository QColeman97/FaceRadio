<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp">

    <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp" app:srcCompat="@android:drawable/radiobutton_off_background"
            android:id="@+id/imageview_friend"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            tools:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_textview_friend" app:layout_constraintStart_toEndOf="@+id/imageview_friend"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/friend_textview_latest_song"
            app:layout_constraintVertical_chainStyle="packed" android:textStyle="bold"
            android:textColor="@android:color/black" android:textSize="18sp"/>
    <TextView
            android:text="Latest Song"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/friend_textview_latest_song" app:layout_constraintStart_toEndOf="@+id/imageview_friend"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/username_textview_friend"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="8dp" android:textSize="16sp"/>

</android.support.constraint.ConstraintLayout>